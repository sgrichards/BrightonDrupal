{% block hook_theme %}

/**
 * Implements hook_theme().
 */
function {{ module }}_theme() {
  $theme = [];
  $theme['{{ entity_name }}'] = [
    'render element' => 'elements',
    'file' => '{{ entity_name }}.page.inc',
    'template' => '{{ entity_name }}',
  ];
  $theme['{{ entity_name }}_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => '{{ entity_name }}.page.inc',
  ];
  return $theme;
}
{% endblock %}
